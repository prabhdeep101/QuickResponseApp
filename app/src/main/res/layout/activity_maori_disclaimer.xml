<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fullbackground">

    <ImageView
        android:id="@+id/warningImage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/kauriwarning"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/disclaimerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="He whakamāu"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/warningImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/disclaimerText"
        android:layout_width="424dp"
        android:layout_height="364dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:padding="16dp"
        android:text="He tauira tēnei taupānga i hangaia mō ngā kaupapa mātauranga hei wāhanga o tētahi kaupapa ākonga i raro i te mahi ngātahi me AWAI. Ehara tēnei i te ratonga ohotata mana, ā, ehara hoki i te mea hei whakakapi i ngā āwhina ngaio, i ngā tohutohu ture rānei.\n\nKo ngā ingoa whakapā, kōtaha, me ngā raraunga e whakamahia ana i tēnei taupānga, he tauira anake mō te whakaaturanga. Ehara te taupānga nei i te mea ora, kāore hoki i te tino oti.\n\nMā ngā urupare ka kohia i tēnei tauira ka āwhina i te whanaketanga a muri ake nei."
        android:textColor="#333"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/acceptButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/disclaimerTitle" />

    <Button
        android:id="@+id/acceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:backgroundTint="#D9A138"
        android:text="  Accept "
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.792"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/translateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:backgroundTint="#63D938"
        android:text="To english"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
