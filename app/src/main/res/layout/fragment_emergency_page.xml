<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundphoto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="80dp"> <!-- space for home button -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal">

            <!-- Banner: Who do you want to call? -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="50dp"
                        android:text="Who do you want to call?"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/kaurisitting"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Row of call buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <!-- Police -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/callPoliceBtn"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/rounded_button"
                        android:src="@drawable/police"
                        android:scaleType="centerInside"
                        android:contentDescription="Police" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="POLICE\nPIRIHIMANA"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Ambulance -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="8dp">

                    <ImageButton
                        android:id="@+id/callAmbulanceBtn"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/rounded_button"
                        android:src="@drawable/ambulance"
                        android:scaleType="centerInside"
                        android:contentDescription="Ambulance" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AMBULANCE\nWAKA TŪPAPAKU"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Guardian -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="8dp">

                    <ImageButton
                        android:id="@+id/callGuardianBtn"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/rounded_button"
                        android:scaleType="centerInside"
                        android:contentDescription="Guardian" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GUARDIAN\nKAITIAKI"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Banner 2: Kauri talks for you -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Do you want me to talk to someone for you?"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kei te hiahia koe kia kōrero au ki tētahi mōu?"
                        android:textSize="14sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/kaurileftwing"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Row of message buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <!-- Msg Police -->
                <Button
                    android:id="@+id/msgPoliceBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="KAURI TALKS TO\nPOLICE"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:background="@drawable/rounded_button"
                    android:layout_marginEnd="4dp"/>

                <!-- Msg Ambulance -->
                <Button
                    android:id="@+id/msgAmbulanceBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="KAURI TALKS TO\nAMBULANCE"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:background="@drawable/rounded_button"
                    android:layout_marginHorizontal="4dp"/>

                <!-- Msg Guardian -->
                <Button
                    android:id="@+id/msgGuardianBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="KAURI TALKS TO\nGUARDIAN"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:background="@drawable/rounded_button"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Home button -->
    <ImageButton
        android:id="@+id/home_button"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="22dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_gravity="bottom|end"
        android:src="@drawable/home_button" />
</RelativeLayout>