<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backgroundphoto"
    tools:context="com.example.quickresponseapp.profile.RegistrationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Form Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Profile Image with Upload Button -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/kaurihead"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="6dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@android:color/black"
                android:contentDescription="Profile Bird" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tap_to_upload_photo"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"/>


            <!-- Section Title -->
            <TextView
                android:text="@string/registration_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:textColor="@android:color/black" />

            <!-- Inputs -->
            <EditText
                android:id="@+id/nameInput"
                android:hint="@string/hint_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="28dp"
                android:textColor="#000000"
                android:textColorHint="#C4C5C5"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/birthdayInput"
                android:hint="@string/hint_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="28dp"
                android:textColor="#000000"
                android:textColorHint="#C4C5C5"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="8dp"
                android:focusable="false"
                android:clickable="true" />

            <EditText
                android:id="@+id/addressInput"
                android:hint="@string/hint_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="28dp"
                android:textColor="#000000"
                android:textColorHint="#C4C5C5"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="8dp" />

            <TextView
                android:text="@string/label_guardian"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="28dp"
                android:layout_marginTop="16dp"
                android:textColorHint="#C4C5C5"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/guardianName"
                android:hint="@string/hint_guardian_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="28dp"
                android:textColor="#000000"
                android:textColorHint="#C4C5C5"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/guardianPhone"
                android:hint="@string/hint_guardian_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="28dp"
                android:textColor="#000000"
                android:textColorHint="#C4C5C5"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="8dp"
                android:inputType="phone" />

            <CheckBox
                android:id="@+id/orangaCheck"
                android:text="@string/label_oranga_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black" />

            <!-- Save Button -->
            <Button
                android:id="@+id/saveButton"
                android:text="@string/button_save"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#FBB03B"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
